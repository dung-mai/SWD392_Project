@page
@model SWD392_PracinicalManagement.Pages.PracinicalCategories.UpdateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = "_Layout";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
	body {
		color: #566787;
		background: #f5f5f5;
		font-family: 'Varela Round', sans-serif;
		font-size: 15px;
	}
</style>
<body>
	<div class="container">
		
		<div class="row">
			<div class="col text-center">
				<h1>Thêm danh mục khám lâm sàng</h1>
			</div>
		</div>
		<form method="post">
		<div class="row">
			<div class="col">
				<div class="form-group p-3">
					<label for="pracinicalCategoryId" class="col-sm-6 col-form-label">Mã danh mục:</label>
					<input type="text" class="form-control" name="id" readonly value="@Model.pracinicalCategory.PracinicalCategoryId">
				</div>
			</div>
			<div class="col">
				<div class="form-group p-3">
					<label for="pracinicalCategoryName" class="col-sm-6 col-form-label">Tên danh mục:</label>
						<input type="text" class="form-control" name="pracinicalCategoryName" required value="@Model.pracinicalCategory.PracinicalCategoryName">
				</div>
			</div>
			<div class="w-100"></div>
			<div class="col">
				<div class="col form-group p-3">
					<label for="departmentId" class="col-sm-6 col-form-label">Chuyên khoa:</label>
					<select class="form-control" id="departmentId" name="department">
						@foreach (var department in Model.departments)
						{
							 <option value="@department.DepartmentId">@department.DepartmentName</option>
						}
					</select>
				</div>
			</div>
			<div class="col">
				<div class="form-group p-3">
					<label for="pracinicalCategoryName" class="col-sm-6 col-form-label">Mô tả:</label>
					<textarea class="form-control" id="description" rows="2" name="description" >@Model.pracinicalCategory.Desctiption</textarea>
				</div>
			</div>
		</div>

		<div class="row mt-3">
			<div class="col" style="margin-left: 10px;">
				<button class="btn btn-primary" type="submit">Cập nhật</button>
			</div>
		</div>
		</form>
	</div>
</body>