@page "/account/update"
@model SWD392_PracinicalManagement.Pages.AccountManager.IndexModel
@{
    Layout = "_Layout";
}

<head>
    <link href="~/css/style.css" rel="stylesheet">
</head>

<style>
    .alert {
        position: relative;
        padding: 1rem 1rem;
        margin-bottom: 1rem;
        color: inherit;
/*        background-color: #E2BDA2;
*/        border: 1px solid transparent;
        border-radius: 0.4rem;
    }

    .alert-dismissible {
        padding-right: 3rem;
    }

        .alert-dismissible .btn-close {
            position: absolute;
            top: 0;
            right: 0;
            z-index: 2;
            padding: 1.25rem 1rem;
        }

</style>
<!-- Pills content -->
<div class="row">
    <partial name="~/Pages/Shared/_PatientAside.cshtml" />

    <div class="col-sm-8 mx-auto py-4">
        @if(TempData["error"] != null){
            <div class="alert alert-dismissible alert-danger center mb-4 pb-1" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <p>@TempData["error"]</p>
            </div>
        }
        @if(TempData["success"] != null){
            <div class="alert alert-dismissible alert-success center mb-4 pb-1" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <p>@TempData["success"]</p>
            </div>
        }

        <h1 class="mb-3 ms-3">Hồ sơ của bạn</h1>
        <section class="content-body p-xl-4">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="row gx-3">
                            <div class="col-6  mb-3 me-3">
                                <label class="form-label">Họ và tên</label>
                                <input name="name" value="@Model.Account?.Name" class="form-control" type="text" placeholder="Type here">
                            </div> <!-- col .// -->
                            <div class="col-lg-6  mb-3">
                                <label class="form-label">Email</label>
                                <input class="form-control" type="email" placeholder="example@mail.com" name="email" value="@Model.LoggedInAccount?.Email" readonly>
                            </div> <!-- col .// -->
                            <div class="col-lg-6  mb-3">
                                <label class="form-label">Ngày sinh</label>
                                <input name="dob" value="@(Model.Account?.Dob?.ToString("yyyy-MM-dd"))" class="form-control" type="date">
                            </div> <!-- col .// -->
                            <div class="col-lg-6  mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input name="phonenumber" class="form-control" type="tel" placeholder="+1234567890" value="@Model.Account?.PhoneNumber">
                            </div> <!-- col .// -->
                            <div class="col-lg-6  mb-3">
                                <label class="form-label my-1">Giới tính</label>
                                <div class="d-flex align-items-center h-50">
                                    <input type='radio' name='gender' value='male' @((Model?.Account?.Gender != null && (bool)Model?.Account?.Gender?.ToLower()?.Equals("male")) ? "checked" : "") class="form-check-input ms-2">
                                    <label class="">Nam</label>
                                    <input type='radio' name='gender' value='female' @((Model?.Account?.Gender != null && (bool)Model?.Account?.Gender?.ToLower()?.Equals("female")) ? "checked" : "") class="form-check-input ms-4">
                                    <label class="">Nữ</label>
                                </div>
                            </div> <!-- col .// -->
                            <div class="col-lg-12  mb-3">
                                <label class="form-label">Địa chỉ</label>
                                <input name="address" class="form-control" type="text" placeholder="Type here" value="@Model?.Account?.Address">
                            </div> <!-- col .// -->
                        </div> <!-- row.// -->
                    </div> <!-- col.// -->
                    <div class="col-lg-4 avatar-input">
                        <figure class="text-lg-center">
                            <img src="~/img/default-avatar.jpg" class="img-lg my-3 rounded-circle" width="196" height="196" alt="User Photo" id="show-avatar">
                            <figcaption>
                                <div class="btn btn-outline-primary" id="my-button" onclick="document.getElementById('my-file').click()">
                                    <i class="fa-solid fa-cloud-arrow-up" style="color: blue"></i> Upload
                                </div>
                                <input type="file" accept="image/*" name="avatar" id="my-file" style="display: none"
                                       onchange="document.getElementById('show-avatar').src = window.URL.createObjectURL(this.files[0])">
                            </figcaption>
                        </figure>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
                <br>
                <button class="btn btn-primary" type="submit">Cập nhật</button>
            </form>

            <hr class="my-5">

        </section> <!-- content-body .// -->

    </div> <!-- col.// -->
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
