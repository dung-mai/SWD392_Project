<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SWD392_PracinicalManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ui.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SWD392_PracinicalManagement.styles.css" asp-append-version="true" />
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <div class="page-wrapper">
        <nav class="left-aside fixed-aside bg-white">
            <div class="aside-top logo d-flex justify-content-between">
                <a href="" class="p-3">
                    <img src="~/img/logo_manager.png" alt="">
                </a>
                <div class="sidebar_close_icon">
                    <button class="btn btn-icon btn-aside-minimize">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>

            <div class="aside-body p-3">
                <ul class="menu-aside menu">
                    <li class="menu-item">
                        <a class="menu-link" href="/PracinicalCategories/Add">
                            <img src="~/img/calendar.svg">
                            <span class="text ms-4">Quản lý chuyên mục khám</span>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a class="menu-link" href="">
                            <img src="~/img/users.svg">
                            <span class="text ms-4">Quản lý dịch vụ cận lâm sàng</span>
                        </a>
                    </li>


                    <li class="menu-item">
                        <a class="menu-link" href="">
                            <img src="~/img/edit.svg">
                            <span class="text ms-4">Quản lý kết quả khám</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a class="menu-link" href="/ExamFormPage/ExaminationFormList">
                            <img src="~/img/edit.svg">
                            <span class="text ms-4">Quản lý phiếu khám</span>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a class="menu-link" href="/ExamFormPage/ExaminationFormList">
                            <img src="~/img/edit.svg">
                            <span class="text ms-4">Quản lý hồ sơ bệnh nhân</span>
                        </a>
                    </li>

                </ul>
            </div>
        </nav>

        <main class="main-admin-page">

            <header class="main-header navbar py-3 ms-1">
                <div class="col-search">
                    <form action="#">
                        <div class="search_field">
                            <input type="text" class="text-secondary" style="padding-left: 87px;
                       padding-right: 15px;" placeholder="Search here...">
                        </div>
                        <button type="submit" class="search-btn"> <img src="~/img/search.svg"> </button>
                    </form>
                </div>
                <div class="col-user">
                    <li class="nav-item">
                        <a class="nav-link btn-icon" href="#">
                            <i class="fas fa-solid fa-bell"></i>
                        </a>
                    </li>
                    <li class="dropdown nav-item">
                        <a class="dropdown-account-toggle ms-3" href="#">
                            <img src="~/img/default-avatar.jpg" class="img-user" alt="User Photo">
                            <i class="fas fa-solid fa-caret-down" style="font-size: 16px"></i>
                        </a>
                        <div class="dropdown-menu-list dropdown-menu-end">

                            <a class="dropdown-item" href="">
                                <img src="~/img/user.svg" alt="alt" /> Thông tin cá nhân
                            </a>
                            <a class="dropdown-item" asp-page="/Logout">
                                <img src="~/img/log-out.svg" alt="alt" /> Đăng xuất
                            </a>
                        </div>
                    </li>
                </div>
            </header>

            <!-- Navbar End -->
            <div class="container">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>