@page
@model SWD392_PracinicalManagement.Pages.ExamFormPage.ExaminationFormListModel
@using SWD392_PracinicalManagement.Models;
@{
    Layout = "_Layout";
}
<style>
    th {
        padding-right: 36px;
    }
</style>

<div padding-bottom="10px">
    <h2>Quản lý phiếu khám</h2>
</div>

<div padding-bottom="10px">
    <form asp-page-handler="FilterDoctor" method="post">
        <input type="text" id="doctor" name="doctor">

        </input> 
        <input type="submit" />Search by doctor Id
    </form>

    <form asp-page-handler ="FilterPatient" method="post">
        <input type="text" id="patient" name="patient">
        </input>
        <input type="submit" />Search by patient Id
    </form>

    <form asp-page-handler="FilterDate" method="post">
        <input type="date" name="date" id="date" />
        <input type="submit" />Search by date
    </form>
</div>
<div>
    <a href="/Products/Cart"></a>
    <table>
        <thead>
        <th>Id</th>
        <th>Doctor Id</th>
        <th>Doctor</th>
        <th>Patient Id</th>
        <th>Patient</th>
        <th>MeetingDate</th>
        <th>Note</th>
        </thead>
        <tbody>
            @foreach (ExaminationForm ex in Model.examFormList)
            {
                <tr>
                    <td>@ex.ExaminationFormId</td>
                    <td>@ex.DoctorCode</td>
                    <td>@ex.DoctorCodeNavigation.Account.Name</td>
                    
                    <td>@ex.Patient.AccountId</td>
                    <td>@ex.Patient.Name</td>
                    <td>@ex.MeetingDate</td>
                    <td>@ex.Note</td>
                </tr>
            }

        </tbody>
    </table>
</div>
